
<div style="font-family:BYekan ;" class="limiter">
    <div class="container-login100" style="background-image: url('/images/bg-01.jpg');">
        <div class="wrap-login100 p-t-30 p-b-50">
            <span class="login100-form-title p-b-41">
                ثبت نام کاربران
            </span>
            <form action="/users/register" method="post" class="login100-form validate-form p-b-33 p-t-5">

                <div class="wrap-input100 validate-input" data-validate = "نام کاربری را وارد کنید">
                    <input style="text-align: right;" class="input100" type="text" name="username" placeholder="نام کاربری">
                </div>

                <div class="wrap-input100 validate-input" data-validate = "ایمیل را وارد کنید">
                    <input style="text-align: right;" class="input100" type="text" name="email" placeholder="ایمیل">
                </div>

                <div class="wrap-input100 validate-input" data-validate="کلمه عبور را وارد کنید">
                    <input style="text-align: right;" class="input100" type="password" name="password" placeholder="کلمه عبور">
                </div>
                <div class="wrap-input100 validate-input" data-validate="کلمه عبور را وارد کنید">
                    <input style="text-align: right;" class="input100" type="password" name="confirmPassword" placeholder="تکرار کلمه عبور ">
                </div>
                
                <div class="container-login100-form-btn m-t-32">
                    <button class="login100-form-btn">
                        ثبت نام
                    </button>
                   
                </div>
                <div class="mt-2" style="text-align:center ;">
                    <a  class="btn  btn-outline-danger ml-2" href="/users/login">ورود</a>
                </div>

            </form>
        </div>
    </div>
</div>

